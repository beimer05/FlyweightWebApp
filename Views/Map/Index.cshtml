@model TreeViewModel
@{
	var trees = ViewBag.Trees as List<Tree>;
}


<h2>Add a new Tree</h2>

<form asp-action="Index" method="post">
	<label>Species:</label>
	<select asp-for="Species">
		@foreach (var species in Model.AvailableSpecies)
		{
			<option value="@species">@species</option>
		}
	</select>
	<span asp-validation-for="Species" class="text-danger"></span><br />
	<label>Latitude:</label>
	<input asp-for="Latitude" type="number" step="0.0001" />
	<span asp-validation-for="Latitude" class="text-danger"></span><br />
	<label>Longitude:</label>
	<input asp-for="Longitude" type="number" step="0.0001" />
	<span asp-validation-for="Longitude" class="text-danger"></span><br />
	<button type="submit">Add Tree</button>
</form>

<h2>List of Trees</h2>
@if (trees != null && trees.Any())
{
	<div style="display:flex; flex-wrap:wrap">
		@foreach (var tree in trees)
		{
			<div style="margin: 10px; padding: 10px; border: 1px solid #ccc;">
				<img src="@tree.Type.IconPath" alt="@tree.Type.Name" width="40" />
				<p><strong>@tree.Type.Name</strong> (<span style="color:@tree.Type.Color">@tree.Type.Color</span>)</p>
				<p>Lat: @tree.Latitude</p>
				<p>Lng: @tree.Longitude</p>
			</div>
		}
	</div>
}
else
{
<p>No trees yet</p>
}
